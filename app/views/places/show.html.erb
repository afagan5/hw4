
<div class="row">
      <div class="col-sm-9">
       <h1><%= @place["name"] %></h1>
      </div>
      <div class="col-sm-3 text-end">
        <a class="btn btn-success" href="/posts/new?place_id=<%= @place["id"] %>" role="button">New Post</a>
      </div>
    </div>


<h2>My Posts</h2>

<div class="my-3">

<% if @current_user %>

<div class="row">
  <% for post in @posts %>
    <div class="col-md-3 col-sm-6">
      <h4>
      <%= post["title"] %>
       </h4>
       <em>
      <%= post["posted_on"] %>
      </em>
     
      <% if post.uploaded_image.attached? %>
      <img src="<%= url_for(post.uploaded_image)%>" class="img-fluid">
      <% else %>
      <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>

      <%= post["description"] %>
      
    </div>
  <% end %>
</div>
</div>


<div class="my-3">
<p>
<a class="btn btn-primary" href="/places" role="button">Back to All Places</a>
</p>
</div>
</div>

<% else %>
<% flash["notice"] = "Sorry, you need to be logged in to view and create posts." %>

<% end %>