<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>

<div class="row">
  <% for post in @posts %>
    <div class="col-md-3 col-sm-6">
      <h4>
      <%= post["title"] %>
      <%= post["posted_on"] %>
      <%= post["description"] %>
      </h4>
      <img src="<%= post["image"] %>" class="img-fluid">
    </div>
  <% end %>
</div>

<div class="row">
<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
</div>